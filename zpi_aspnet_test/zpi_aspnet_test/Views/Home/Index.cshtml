@model zpi_aspnet_test.Models.ProductModel

@{
    ViewBag.Title = "Home Page";
}

<asp:DropDownList runat="server" CssClass="form-control" ID="something" />

<div class="row" style="margin-top: 10px">
    <form class="form-inline col-md-12">
        <div class="form-group">
            <label class="" for="selectProduct">Product:</label>
            @Html.DropDownList("ProductDropDown", Model.ProductList, "Select Product", new{ @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="preferredPriceInput" placeholder="Preferred Price">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</div>

<div class="row" style="margin-top: 10px">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">State</th>
                <th scope="col">Purchase Price</th>
                <th scope="col">Preferred Price</th>
                <th scope="col">Final Price</th>
                <th scope="col">Margin</th>
            </tr>
        </thead>
    </table>
</div>