@model zpi_aspnet_test.ViewModels.ErrorViewModel
@{
	ViewBag.Title = "Error has occured";
}

@Html.Partial("Error")
<div class="alert alert-danger" role="alert">
	<h4 class="alert-heading">@Model.ErrorCode</h4>
	<p>@Model.ErrorMessage</p>
	<hr>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<p class="mb-0">
		Please go back home!
		<button type="submit" class="btn btn-link" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");">
			<span class="glyphicon glyphicon-home"></span>
		</button>
	</p>


</div>